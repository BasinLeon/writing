---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allWriting = await getCollection('literary', ({ data }) => data.isDraft !== true);
const sortedWriting = allWriting.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const marqueePost = sortedWriting[0];
const ledgerPosts = sortedWriting.slice(1);
const base = import.meta.env.BASE_URL;
---

<Layout title="Leon Basin Literary" hideGlobalHeader={true}>
  <header class="anchor">
    <a href={base} class="site-title">Leon Basin</a>
    <nav class="quiet-nav">
      <a href={`${base}manifesto/`}>Manifesto</a>
      <a href={`${base}literary/`}>Literary Lane</a>
      <a href={`${base}ideas/`}>Ideas</a>
    </nav>
  </header>

  <main>
    {marqueePost && (
      <section class="marquee">
        <div class="signature-rule"></div>
        <article class="lead-signal">
          <p class="meta">
            <time datetime={marqueePost.data.publishDate.toISOString()}>
              {marqueePost.data.publishDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
            </time>
            <span class="separator"> • </span>
            <span class="type">{marqueePost.data.type}</span>
          </p>
          <h1 class="display-title">
            <a href={`${base}literary/${marqueePost.slug}/`}>{marqueePost.data.title}</a>
          </h1>
          <p class="summary">{marqueePost.data.description}</p>
          <a href={`${base}literary/${marqueePost.slug}/`} class="editorial-link">Read full text →</a>
        </article>
      </section>
    )}

    <section class="ledger">
      <h2 class="archive-heading">Archive</h2>
      <p class="catalog-links"><a href={`${base}series/`}>Series</a> <a href={`${base}tags/`}>Tags</a></p>
      <ul class="ledger-list">
        {ledgerPosts.map((post) => (
          <li class="ledger-row">
            <time datetime={post.data.publishDate.toISOString()} class="ledger-date">
              {post.data.publishDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
            </time>
            <p class="ledger-title"><a href={`${base}literary/${post.slug}/`}>{post.data.title}</a></p>
            <span class="ledger-meta">{post.data.type}</span>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<style>
  .anchor {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 2rem;
    margin-bottom: 4rem;
    border-bottom: 1px solid rgba(237, 231, 218, 0.1);
  }

  .site-title {
    font-family: var(--font-display);
    font-weight: 600;
    text-decoration: none;
    color: var(--warm-ivory);
  }

  .quiet-nav a {
    margin-left: 1.5rem;
    text-decoration: none;
    color: var(--warm-ivory);
    opacity: 0.6;
    font-size: 0.9rem;
    transition: opacity 0.2s ease;
  }

  .quiet-nav a:hover {
    opacity: 1;
  }

  .marquee {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 6rem;
  }

  .signature-rule {
    width: 2px;
    background-color: var(--light-soft-gold);
    flex-shrink: 0;
  }

  .lead-signal .meta {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.6;
    margin-bottom: 1rem;
  }

  .lead-signal .display-title {
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .lead-signal .display-title a {
    text-decoration: none;
    color: var(--light-soft-gold);
  }

  .lead-signal .summary {
    font-size: 1.1rem;
    line-height: 1.75;
    max-width: 65ch;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .editorial-link {
    text-decoration: none;
    border-bottom: 1px solid var(--light-soft-gold);
    color: var(--warm-ivory);
    padding-bottom: 2px;
    font-style: italic;
  }

  .archive-heading {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.4;
    margin-bottom: 2rem;
  }

  .catalog-links {
    margin: -1rem 0 1.2rem;
  }

  .catalog-links a {
    margin-right: 0.9rem;
    text-decoration: none;
    color: var(--warm-ivory);
    opacity: 0.72;
    font-size: 0.88rem;
  }

  .catalog-links a:hover {
    opacity: 1;
    text-decoration: underline;
    text-underline-offset: 0.2em;
    text-decoration-color: var(--light-soft-gold);
  }

  @media (max-width: 700px) {
    .anchor {
      flex-direction: column;
      gap: 0.8rem;
      margin-bottom: 2.4rem;
      padding-bottom: 1.2rem;
    }

    .quiet-nav a {
      margin-left: 0;
      margin-right: 1rem;
    }

    .marquee {
      margin-bottom: 2.8rem;
    }

    .lead-signal .display-title {
      font-size: 2rem;
    }

    .ledger {
      margin-top: 0.6rem;
    }
  }
</style>
