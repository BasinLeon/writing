---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. Fetch all published literary works
const allWriting = await getCollection('literary', ({ data }) => {
  return data.isDraft !== true;
});

// 2. Sort chronologically (newest first)
const sortedWriting = allWriting.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// 3. Isolate the Marquee (latest piece) and the Ledger (the archive)
const marqueePost = sortedWriting[0];
const ledgerPosts = sortedWriting.slice(1);
const base = import.meta.env.BASE_URL;
---

<Layout title="Leon Basin Literary" hideGlobalHeader={true}>
  <header class="anchor">
    <a href={base} class="site-title">Leon Basin</a>
    <nav class="quiet-nav">
      <a href={`${base}manifesto/`}>Manifesto</a>
      <a href={`${base}literary/`}>Literary Lane</a>
      <a href={`${base}ideas/`}>Ideas</a>
    </nav>
  </header>

  <main>
    {marqueePost && (
      <section class="marquee">
        <div class="signature-rule"></div>
        <article class="lead-signal">
          <p class="meta">
            <time datetime={marqueePost.data.publishDate.toISOString()}>
              {marqueePost.data.publishDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
            </time>
            <span class="separator"> â€¢ </span>
            <span class="type">{marqueePost.data.type}</span>
          </p>
          <h1 class="display-title">
            <a href={`${base}literary/${marqueePost.slug}/`}>{marqueePost.data.title}</a>
          </h1>
          <p class="summary">{marqueePost.data.description}</p>
          <a href={`${base}literary/${marqueePost.slug}/`} class="editorial-link">Read full text -></a>
        </article>
      </section>
    )}

    {ledgerPosts.length > 0 && (
      <section class="ledger">
        <h2 class="ledger-title">Latest Writing</h2>
        <ul class="archive-list">
          {ledgerPosts.map((post) => (
            <li>
              <time datetime={post.data.publishDate.toISOString()} class="ledger-date">
                {post.data.publishDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
              </time>
              <a href={`${base}literary/${post.slug}/`} class="ledger-link">{post.data.title}</a>
              <span class="ledger-meta">{post.data.type}</span>
            </li>
          ))}
        </ul>
      </section>
    )}
  </main>
</Layout>

<style>
  .anchor {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 2rem;
    margin-bottom: 4rem;
    border-bottom: 1px solid rgba(237, 231, 218, 0.1);
  }

  .site-title {
    font-family: var(--font-display);
    font-weight: 600;
    text-decoration: none;
    color: var(--warm-ivory);
    font-size: 1.25rem;
  }

  .quiet-nav a {
    margin-left: 1.5rem;
    text-decoration: none;
    color: var(--warm-ivory);
    opacity: 0.6;
    font-size: 0.9rem;
    transition: opacity 0.2s ease;
  }

  .quiet-nav a:hover {
    opacity: 1;
  }

  .marquee {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 6rem;
  }

  .signature-rule {
    width: 2px;
    background-color: var(--light-soft-gold);
    flex-shrink: 0;
  }

  .lead-signal .meta {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.6;
    margin-bottom: 1rem;
  }

  .lead-signal .display-title {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.1;
    margin-bottom: 1rem;
    text-wrap: balance;
  }

  .lead-signal .display-title a {
    text-decoration: none;
    color: var(--light-soft-gold);
  }

  .lead-signal .summary {
    font-size: 1.1rem;
    line-height: 1.75;
    max-width: 65ch;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .editorial-link {
    text-decoration: none;
    border-bottom: 1px solid var(--light-soft-gold);
    color: var(--warm-ivory);
    padding-bottom: 2px;
    font-style: italic;
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  .editorial-link:hover {
    color: var(--light-soft-gold);
  }

  .ledger-title {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.4;
    margin-bottom: 2rem;
  }

  .archive-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .archive-list li {
    display: grid;
    grid-template-columns: 80px 1fr 100px;
    gap: 1.5rem;
    align-items: baseline;
    padding-block: 1.25rem;
    border-bottom: 1px solid rgba(237, 231, 218, 0.05);
  }

  .ledger-date {
    font-size: 0.85rem;
    opacity: 0.5;
  }

  .ledger-meta {
    font-size: 0.85rem;
    opacity: 0.5;
    text-align: right;
    text-transform: capitalize;
  }

  .ledger-link {
    text-decoration: none;
    color: var(--warm-ivory);
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .ledger-link:hover {
    color: var(--light-soft-gold);
  }

  @media (max-width: 600px) {
    .archive-list li {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .ledger-meta {
      text-align: left;
    }
  }
</style>
