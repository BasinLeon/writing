---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const essays = (await getCollection('essays', ({ data }) => !data.draft))
  .sort((a, b) => (b.data.date?.getTime() ?? 0) - (a.data.date?.getTime() ?? 0));
const base = import.meta.env.BASE_URL;

const estimateReadMinutes = (text: string) => {
  const words = text.trim().split(/\s+/).filter(Boolean).length;
  return Math.max(1, Math.round(words / 220));
};
---

<Layout title="Leon Basin Literary" description="Literary digital writing for the modern era.">
  <section class="hero">
    <p class="kicker">Literary Digital Writer</p>
    <h1>Writing for the Digital Era, Without Losing the Human Pulse</h1>
    <p class="prose lede">Personal essays, memory fragments, and voice-led writing. This is a living archive for interior life, modern attention, and language that refuses to flatten into content.</p>
    <p class="editorial-links">
      <a href={`${base}manifesto/`}>Read the manifesto</a>
      <a href={`${base}literary-lane/`}>Enter literary lane</a>
      <a href={`${base}literary-ideas/`}>Browse literary ideas</a>
    </p>
  </section>

  <section class="latest">
    <h2>Latest Writing</h2>
    <ol class="writing-list">
      {essays.map((entry) => (
        <li>
          <a href={`${base}${entry.slug}/`} class="writing-title">{entry.data.title}</a>
          <p class="writing-meta">
            {entry.data.date?.toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) ?? 'Undated'}
            {' â€¢ '}
            {estimateReadMinutes(entry.body)} min read
          </p>
        </li>
      ))}
    </ol>
  </section>
</Layout>
