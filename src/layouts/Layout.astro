---
import '../styles/global.css';
import Subscribe from '../components/Subscribe.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishDate?: Date;
  readingMode?: boolean;
  hideGlobalHeader?: boolean;
  hideGlobalColophon?: boolean;
}

const {
  title = 'Leon Basin | Literary Digital Writer',
  description = 'High-signal literary writing for the digital era.',
  image = `${import.meta.env.BASE_URL}og-default.jpg`,
  type = 'website',
  publishDate,
  readingMode = false,
  hideGlobalHeader = false,
  hideGlobalColophon = false
} = Astro.props;

const base = import.meta.env.BASE_URL;
const rssHref = Astro.site ? new URL(`${base}rss.xml`, Astro.site).toString() : `${base}rss.xml`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO title={title} description={description} image={image} type={type} publishDate={publishDate} />
    <link rel="alternate" type="application/rss+xml" title="Leon Basin Literary" href={rssHref} />

    <link rel="preload" href={`${base}fonts/InstrumentSans-Regular.woff2`} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={`${base}fonts/InstrumentSans-Bold.woff2`} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={`${base}fonts/IBMPlexSerif-Regular.woff2`} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={`${base}fonts/IBMPlexSerif-Bold.woff2`} as="font" type="font/woff2" crossorigin />
  </head>
  <body class={readingMode ? 'reading-mode' : ''}>
    {!hideGlobalHeader && (
      <header class="site-header">
        <div class="shell nav-wrap">
          <a href={base} class="brand">Leon Basin | Literary Digital Writer</a>
          {!readingMode && (
            <nav class="nav-links">
              <a href={`${base}manifesto/`}>Manifesto</a>
              <a href={`${base}literary/`}>Literary Lane</a>
              <a href={`${base}ideas/`}>Literary Ideas</a>
              <a href={`${base}series/`}>Series</a>
              <a href={`${base}tags/`}>Tags</a>
            </nav>
          )}
        </div>
      </header>
    )}
    <main class="site-main">
      <div class="shell">
        <slot />
      </div>
    </main>
    {!hideGlobalColophon && (
      <footer class="site-colophon">
        <div class="shell">
          <div class="colophon-grid">
            <p>Leon Basin Literary. A living archive for rereading.</p>
            {!readingMode && <Subscribe />}
          </div>
        </div>
      </footer>
    )}
  </body>
</html>
