---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  readingMode?: boolean;
  hideGlobalHeader?: boolean;
  hideGlobalColophon?: boolean;
}

const {
  title = 'Leon Basin | Literary Digital Writer',
  description = 'High-signal literary writing for the digital era.',
  readingMode = false,
  hideGlobalHeader = false,
  hideGlobalColophon = false
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />

    <link rel="preload" href={`${base}fonts/Inter-Medium.woff2`} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={`${base}fonts/SpaceGrotesk-SemiBold.woff2`} as="font" type="font/woff2" crossorigin />
  </head>
  <body class={readingMode ? 'reading-mode' : ''}>
    {!hideGlobalHeader && (
      <header class="site-header">
        <div class="shell nav-wrap">
          <a href={base} class="brand">Leon Basin | Literary Digital Writer</a>
          {!readingMode && (
            <nav class="nav-links">
              <a href={`${base}manifesto/`}>Manifesto</a>
              <a href={`${base}literary/`}>Literary Lane</a>
              <a href={`${base}ideas/`}>Literary Ideas</a>
            </nav>
          )}
        </div>
      </header>
    )}
    <main class="site-main">
      <div class="shell">
        <slot />
      </div>
    </main>
    {!hideGlobalColophon && (
      <footer class="site-colophon">
        <div class="shell">
          <p>Leon Basin Literary. A living archive for rereading.</p>
        </div>
      </footer>
    )}
  </body>
</html>
