---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  readingMode?: boolean;
}

const { title = 'Leon Basin Literary', description = 'Literary digital writing for the modern era.', readingMode = false } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght,SOFT@9..144,500..700,0..100&family=Public+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class={readingMode ? 'reading-mode' : ''}>
    <header class="site-header">
      <div class="shell nav-wrap">
        <a href={base} class="brand">Leon Basin Literary</a>
        {!readingMode && (
          <nav class="nav-links">
            <a href={`${base}manifesto/`}>Manifesto</a>
            <a href={`${base}literary-lane/`}>Literary Lane</a>
            <a href={`${base}literary-ideas/`}>Literary Ideas</a>
          </nav>
        )}
      </div>
    </header>
    <main class="site-main">
      <div class="shell">
        <slot />
      </div>
    </main>
  </body>
</html>
